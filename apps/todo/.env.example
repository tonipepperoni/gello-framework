# ============================================================================
# Gello Todo App Configuration
# ============================================================================
# Copy this file to .env and modify as needed.
# Environment-specific overrides: .env.local, .env.production, .env.production.local

# ─── Application ─────────────────────────────────────────────────────────────

APP_NAME=todo-api
APP_ENV=local
APP_DEBUG=true

# ─── Server ──────────────────────────────────────────────────────────────────

APP_HOST=0.0.0.0
APP_PORT=3000
APP_LOGGING=true
APP_TIMING=true

# ─── Database ────────────────────────────────────────────────────────────────
# PostgreSQL connection settings

DB_HOST=localhost
DB_PORT=5432
DB_NAME=gello
DB_USER=gello
DB_PASSWORD=secret
DB_SSL=false

# Connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# ─── Redis ───────────────────────────────────────────────────────────────────
# Used for caching, sessions, and queue driver

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TLS=false

# ─── Queue ───────────────────────────────────────────────────────────────────
# Queue driver: "memory" (default) or "redis"

QUEUE_DRIVER=memory
QUEUE_DEFAULT=default
QUEUE_PREFIX=gello:

# ─── Logging ─────────────────────────────────────────────────────────────────

LOG_LEVEL=debug
LOG_FORMAT=pretty

# ─── Security ────────────────────────────────────────────────────────────────

# CORS allowed origins (comma-separated, or * for all)
CORS_ORIGINS=*

# Rate limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
