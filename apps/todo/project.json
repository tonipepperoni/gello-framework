{
  "name": "todo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/todo/src",
  "projectType": "application",
  "tags": ["scope:apps", "type:example"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/todo",
        "skipTypeCheck": true,
        "configFile": "apps/todo/vite.config.ts"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "todo:build",
        "watch": true
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --import tsx/esm --experimental-transform-types apps/todo/src/main.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  }
}
