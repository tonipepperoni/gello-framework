{
  "name": "gello-platform-node",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/publishable/platform-node/src",
  "projectType": "library",
  "tags": ["scope:public", "type:lib"],
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "tagPrefix": "platform-node-v",
        "postTargets": ["gello-platform-node:publish"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish --access public",
        "cwd": "libs/publishable/platform-node"
      }
    }
  }
}
